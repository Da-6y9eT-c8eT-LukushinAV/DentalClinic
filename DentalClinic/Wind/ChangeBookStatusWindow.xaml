<Window x:Class="DentalClinic.Wind.ChangeBookStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменение статуса книги" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Выберите новый статус:" Grid.Row="0" Margin="0,5"/>
        <ComboBox x:Name="StatusComboBox" Grid.Row="1" Margin="0,5"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window> 